{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://melo-keep.io/track.schema.json",
    "title": "Track",
    "description": "A track in the repertoire",
    "type": "object",
    "required": ["_id", "artist", "title"],
    "properties": {
        "_id": {
            "type": "string",
            "description": "Unique identifier of the track"
        },
        "artist": {
            "type": "string",
            "description": "Artist of the track"
        },
        "title": {
            "type": "string",
            "description": "Title of the track"
        },
        "difficulty": {
            "type": "integer",
            "description": "General difficulty of the track",
            "minimum": 1,
            "maximum": 10
        },
        "retention": {
            "type": "integer",
            "description": "General retention of the track",
            "minimum": 1,
            "maximum": 10
        }
    }
}
